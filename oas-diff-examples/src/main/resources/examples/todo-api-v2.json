{
  "openapi": "3.0.0",
  "info": {
    "title": "Todo API",
    "description": "RESTful API f\u00fcr die Verwaltung von Todo-Listen (Version 2 mit Breaking Changes)",
    "version": "2.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@example.com"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v2",
      "description": "Produktionsserver V2"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "Alle Benutzer abrufen",
        "operationId": "getUsers",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "includeInactive",
            "in": "query",
            "required": true,
            "schema": {
              "type": "boolean"
            },
            "description": "Inaktive Benutzer einschlie\u00dfen"
          }
        ],
        "responses": {
          "200": {
            "description": "Liste der Benutzer",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Interner Server-Fehler"
          }
        }
      },
      "post": {
        "summary": "Neuen Benutzer erstellen",
        "operationId": "createUser",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Benutzer erfolgreich erstellt",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Ung\u00fcltige Eingabe"
          }
        }
      }
    },
    "/users/{userId}": {
      "parameters": [
        {
          "name": "userId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          },
          "description": "Benutzer-ID"
        }
      ],
      "get": {
        "summary": "Benutzer nach ID abrufen",
        "operationId": "getUserById",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Benutzer gefunden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Benutzer nicht gefunden"
          }
        }
      },
      "put": {
        "summary": "Benutzer aktualisieren",
        "operationId": "updateUser",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Benutzer aktualisiert",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Benutzer nicht gefunden"
          }
        }
      }
    },
    "/users/{userId}/todos": {
      "parameters": [
        {
          "name": "userId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "get": {
        "summary": "Alle Todos eines Benutzers abrufen",
        "operationId": "getUserTodos",
        "tags": [
          "Todos"
        ],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "OPEN",
                "IN_PROGRESS",
                "COMPLETED",
                "CANCELLED"
              ]
            },
            "description": "Filter nach Status"
          }
        ],
        "responses": {
          "200": {
            "description": "Liste der Todos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Neues Todo erstellen",
        "operationId": "createTodo",
        "tags": [
          "Todos"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TodoInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Todo erstellt",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          }
        }
      }
    },
    "/users/{userId}/todos/{todoId}": {
      "parameters": [
        {
          "name": "userId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        },
        {
          "name": "todoId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "get": {
        "summary": "Todo nach ID abrufen",
        "operationId": "getTodoById",
        "tags": [
          "Todos"
        ],
        "responses": {
          "200": {
            "description": "Todo gefunden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "404": {
            "description": "Todo nicht gefunden"
          }
        }
      },
      "put": {
        "summary": "Todo aktualisieren",
        "operationId": "updateTodo",
        "tags": [
          "Todos"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TodoInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Todo aktualisiert",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Todo l\u00f6schen",
        "operationId": "deleteTodo",
        "tags": [
          "Todos"
        ],
        "responses": {
          "204": {
            "description": "Todo gel\u00f6scht"
          },
          "404": {
            "description": "Todo nicht gefunden"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": [
          "id",
          "username",
          "email",
          "accountType"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "username": {
            "type": "string",
            "example": "johndoe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "accountType": {
            "type": "string",
            "enum": [
              "FREE",
              "PREMIUM"
            ],
            "description": "Account-Typ (neu in V2)"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "isActive": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "UserInput": {
        "type": "object",
        "required": [
          "username",
          "email",
          "accountType"
        ],
        "properties": {
          "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "accountType": {
            "type": "string",
            "enum": [
              "FREE",
              "PREMIUM"
            ]
          }
        }
      },
      "Todo": {
        "type": "object",
        "required": [
          "id",
          "title",
          "status",
          "userId"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string",
            "example": "Einkaufen gehen"
          },
          "description": {
            "type": "string",
            "example": "Milch, Brot und Eier kaufen"
          },
          "status": {
            "type": "string",
            "enum": [
              "OPEN",
              "IN_PROGRESS",
              "COMPLETED",
              "CANCELLED"
            ]
          },
          "priority": {
            "type": "string",
            "enum": [
              "LOW",
              "MEDIUM",
              "HIGH"
            ]
          },
          "userId": {
            "type": "integer",
            "format": "int64"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "dueDate": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "TodoInput": {
        "type": "object",
        "required": [
          "title",
          "priority"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "description": {
            "type": "string",
            "maxLength": 1000
          },
          "status": {
            "type": "string",
            "enum": [
              "OPEN",
              "IN_PROGRESS",
              "COMPLETED",
              "CANCELLED"
            ]
          },
          "priority": {
            "type": "string",
            "enum": [
              "LOW",
              "MEDIUM",
              "HIGH"
            ]
          },
          "dueDate": {
            "type": "string",
            "format": "date"
          }
        }
      }
    }
  }
}

{
  "openapi": "3.0.0",
  "info": {
    "title": "Todo API",
    "description": "RESTful API f\u00fcr die Verwaltung von Todo-Listen (Version 2 mit Breaking Changes)",
    "version": "2.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@example.com"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v2",
      "description": "Produktionsserver V2"
    }
  ],
  "security": [
    {
      "oauth2": [
        "read:todos",
        "write:todos"
      ]
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "Alle Benutzer abrufen",
        "operationId": "getUsers",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "name": "includeInactive",
            "in": "query",
            "required": true,
            "schema": {
              "type": "boolean"
            },
            "description": "Inaktive Benutzer einschlie\u00dfen"
          }
        ],
        "responses": {
          "200": {
            "description": "Liste der Benutzer",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Interner Server-Fehler"
          }
        }
      },
      "post": {
        "summary": "Neuen Benutzer erstellen",
        "operationId": "createUser",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Benutzer erfolgreich erstellt",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Ung\u00fcltige Eingabe"
          }
        }
      }
    },
    "/users/{userId}": {
      "parameters": [
        {
          "name": "userId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          },
          "description": "Benutzer-ID"
        }
      ],
      "get": {
        "summary": "Benutzer nach ID abrufen",
        "operationId": "getUserById",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "Benutzer gefunden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Benutzer nicht gefunden"
          }
        }
      },
      "put": {
        "summary": "Benutzer aktualisieren",
        "operationId": "updateUser",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Benutzer aktualisiert",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Benutzer nicht gefunden"
          }
        }
      }
    },
    "/users/{userId}/todos": {
      "parameters": [
        {
          "name": "userId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "get": {
        "summary": "Alle Todos eines Benutzers abrufen",
        "operationId": "getUserTodos",
        "tags": [
          "Todos"
        ],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": false,
            "style": "spaceDelimited",
            "explode": false,
            "schema": {
              "type": "string",
              "enum": [
                "OPEN",
                "IN_PROGRESS",
                "COMPLETED",
                "CANCELLED"
              ]
            },
            "description": "Filter nach Status"
          }
        ],
        "responses": {
          "200": {
            "description": "Liste der Todos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Neues Todo erstellen",
        "operationId": "createTodo",
        "deprecated": true,
        "tags": [
          "Todos"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TodoInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Todo erstellt",
            "headers": {
              "X-Request-Id": {
                "schema": {
                  "type": "string"
                },
                "description": "Eindeutige Request-ID"
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            },
            "links": {
              "GetUserTodos": {
                "$ref": "#/components/links/GetUserTodos"
              }
            }
          }
        },
        "callbacks": {
          "todoCreated": {
            "$ref": "#/components/callbacks/todoCreated"
          }
        }
      }
    },
    "/users/{userId}/todos/{todoId}": {
      "parameters": [
        {
          "name": "userId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        },
        {
          "name": "todoId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "get": {
        "summary": "Todo nach ID abrufen",
        "operationId": "getTodoById",
        "tags": [
          "Todos"
        ],
        "parameters": [
          {
            "name": "format",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Ausgabeformat (1=JSON, 2=XML)"
          },
          {
            "name": "includeHistory",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean"
            },
            "description": "Historie einschlie\u00dfen"
          }
        ],
        "responses": {
          "200": {
            "description": "Todo gefunden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TodoDetailed"
                }
              }
            }
          },
          "404": {
            "description": "Todo nicht gefunden"
          }
        }
      },
      "put": {
        "summary": "Todo aktualisieren",
        "operationId": "updateTodo",
        "tags": [
          "Todos"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TodoUpdateInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Todo aktualisiert",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Todo l\u00f6schen",
        "operationId": "deleteTodo",
        "tags": [
          "Todos"
        ],
        "responses": {
          "204": {
            "description": "Todo gel\u00f6scht"
          },
          "404": {
            "description": "Todo nicht gefunden"
          }
        }
      },
      "patch": {
        "summary": "Todo teilweise aktualisieren",
        "operationId": "patchTodo",
        "tags": [
          "Todos"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Todo teilweise aktualisiert"
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health Check",
        "operationId": "healthCheck",
        "tags": [
          "System"
        ],
        "responses": {
          "200": {
            "description": "System is healthy"
          }
        }
      }
    },
    "/categories": {
      "get": {
        "summary": "Alle Kategorien abrufen",
        "operationId": "getCategories",
        "deprecated": true,
        "tags": [
          "Categories"
        ],
        "responses": {
          "200": {
            "description": "Liste der Kategorien",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Category"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Neue Kategorie erstellen",
        "operationId": "createCategory",
        "tags": [
          "Categories"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CategoryInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Kategorie erstellt",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Category"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": [
          "id",
          "username",
          "email",
          "accountType"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "username": {
            "type": "string",
            "example": "johndoe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "accountType": {
            "type": "string",
            "enum": [
              "FREE",
              "PREMIUM"
            ],
            "description": "Account-Typ (neu in V2)"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "isActive": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "UserInput": {
        "type": "object",
        "required": [
          "username",
          "email",
          "accountType"
        ],
        "properties": {
          "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "accountType": {
            "type": "string",
            "enum": [
              "FREE",
              "PREMIUM"
            ]
          }
        }
      },
      "Todo": {
        "type": "object",
        "required": [
          "id",
          "title",
          "status",
          "userId"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string",
            "example": "Einkaufen gehen"
          },
          "description": {
            "type": "string",
            "example": "Milch, Brot und Eier kaufen"
          },
          "status": {
            "type": "string",
            "enum": [
              "OPEN",
              "IN_PROGRESS",
              "COMPLETED",
              "CANCELLED"
            ]
          },
          "priority": {
            "type": "string",
            "enum": [
              "LOW",
              "MEDIUM",
              "HIGH"
            ]
          },
          "userId": {
            "type": "integer",
            "format": "int64"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "integer"
          },
          "dueDate": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "TodoInput": {
        "type": "object",
        "required": [
          "title",
          "priority"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "description": {
            "type": "string",
            "maxLength": 1000
          },
          "status": {
            "type": "string",
            "enum": [
              "OPEN",
              "IN_PROGRESS",
              "COMPLETED",
              "CANCELLED"
            ],
            "default": "IN_PROGRESS"
          },
          "priority": {
            "type": "string",
            "enum": [
              "LOW",
              "MEDIUM",
              "HIGH"
            ],
            "deprecated": true
          },
          "dueDate": {
            "type": "string",
            "format": "date",
            "readOnly": true,
            "writeOnly": false
          }
        }
      },
      "TodoDetailed": {
        "type": "object",
        "required": [
          "id",
          "title",
          "status",
          "userId"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "OPEN",
              "IN_PROGRESS",
              "COMPLETED",
              "CANCELLED"
            ]
          },
          "priority": {
            "type": "string",
            "enum": [
              "LOW",
              "MEDIUM",
              "HIGH"
            ]
          },
          "userId": {
            "type": "integer",
            "format": "int64"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "integer"
          },
          "dueDate": {
            "type": "string",
            "format": "date"
          },
          "history": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "TodoUpdateInput": {
        "type": "object",
        "required": [
          "title",
          "priority"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "priority": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "Category": {
        "type": "object",
        "required": [
          "id",
          "name",
          "color"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string",
            "example": "Work",
            "minLength": 3,
            "maxLength": 80
          },
          "description": {
            "type": "string",
            "example": "Work-related tasks"
          },
          "color": {
            "type": "string",
            "example": "#FF5733"
          },
          "icon": {
            "type": "string",
            "example": "briefcase"
          },
          "priority": {
            "type": "integer",
            "minimum": 10,
            "maximum": 50
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "maxItems": 10,
            "uniqueItems": true
          },
          "metadata": {
            "type": "object",
            "additionalProperties": false
          }
        }
      },
      "CategoryInput": {
        "type": "object",
        "required": [
          "name",
          "color"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "description": {
            "type": "string",
            "maxLength": 200
          },
          "color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "icon": {
            "type": "string"
          }
        }
      },
      "Notification": {
        "type": "object",
        "required": [
          "notificationType"
        ],
        "properties": {
          "notificationType": {
            "type": "string"
          }
        },
        "discriminator": {
          "propertyName": "type",
          "mapping": {
            "email": "#/components/schemas/EmailNotification"
          }
        },
        "oneOf": [
          {
            "$ref": "#/components/schemas/EmailNotification"
          }
        ]
      },
      "EmailNotification": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Notification"
          },
          {
            "type": "object",
            "required": [
              "emailAddress"
            ],
            "properties": {
              "emailAddress": {
                "type": "string",
                "format": "email"
              },
              "subject": {
                "type": "string"
              }
            }
          }
        ]
      },
      "SmsNotification": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Notification"
          },
          {
            "type": "object",
            "required": [
              "phoneNumber"
            ],
            "properties": {
              "phoneNumber": {
                "type": "string",
                "pattern": "^\\+[1-9]\\d{1,14}$"
              },
              "message": {
                "type": "string",
                "maxLength": 160
              }
            }
          }
        ]
      }
    },
    "securitySchemes": {
      "apiKey": {
        "type": "http",
        "scheme": "bearer"
      },
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "clientCredentials": {
            "tokenUrl": "https://auth.example.com/oauth/token",
            "scopes": {
              "read:todos": "Todos lesen",
              "write:todos": "Todos schreiben"
            }
          }
        }
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "Zugriff verweigert - Authentifizierung erforderlich",
        "headers": {
          "X-Rate-Limit": {
            "schema": {
              "type": "integer"
            },
            "description": "Anzahl der verbleibenden Anfragen",
            "required": true
          }
        }
      }
    },
    "callbacks": {
      "todoStatusChanged": {
        "{$request.body#/webhookUrl}": {
          "post": {
            "requestBody": {
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "todoId": {
                        "type": "integer"
                      },
                      "newStatus": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "Callback erfolgreich"
              }
            }
          }
        }
      },
      "todoCreated": {
        "{$request.body#/webhookUrl}": {
          "post": {
            "requestBody": {
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object"
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "Todo created callback"
              }
            }
          }
        }
      }
    },
    "links": {
      "GetUserTodos": {
        "operationId": "getUserTodos",
        "parameters": {
          "userId": "$response.body#/userId"
        }
      }
    }
  }
}